<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".view.fragments.MapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginStart="14dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="#3ac2c2"
                app:cardCornerRadius="20dp"
                android:layout_alignParentStart="true"
                android:id="@+id/point"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/point"
                android:layout_toLeftOf="@id/arrow"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="11sp"
                    android:id="@+id/status_label_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#333"
                    android:id="@+id/domicilio_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#aaa"
                    android:id="@+id/suburb_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_marginEnd="10dp"
                android:id="@+id/arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/to_position"
                    android:layout_margin="15dp"
                    android:background="@drawable/button_fill"
                    android:textColor="@color/white"
                    android:text="Navegar"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/visited_place"
                    android:layout_margin="15dp"
                    android:background="@drawable/button_stroke"
                    android:textColor="#3ac2c2"
                    android:text="Realizar Visita"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>